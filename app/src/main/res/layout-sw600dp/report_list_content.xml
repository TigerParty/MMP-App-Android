<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="wrap_content"
              android:layout_height="70dp">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:id="@+id/iv_preview"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:text="@string/rl_content_tv_status"
        android:id="@+id/tv_status"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_toEndOf="@id/iv_preview"
        android:layout_centerVertical="true" />
    <TextView
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:text="@string/rl_content_tv_report_title"
        android:id="@+id/tv_report_title"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/tv_status"
        android:visibility="gone"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:id="@+id/tv_created_at"
        android:textSize="20sp"
        android:gravity="center"
        android:text="0000-00-00 00:00:00"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/bt_edit"
        android:layout_marginEnd="30dp"
        />
    <Button
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:text="@string/rl_content_bt_edit"
        android:textSize="20sp"
        android:id="@id/bt_edit"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:background="#4ab6b6"
        android:textColor="#FFF"
        />
</RelativeLayout>