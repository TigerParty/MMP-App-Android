<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:id="@+id/iv_preview"
        android:layout_gravity="center"
        android:layout_alignParentStart="true"/>
    <TextView
        android:layout_width="65dp"
        android:layout_height="match_parent"
        android:text="@string/rl_content_tv_status"
        android:id="@+id/tv_status"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_toEndOf="@id/iv_preview"/>
    <TextView
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:text="@string/rl_content_tv_report_title"
        android:id="@+id/tv_report_title"
        android:layout_marginStart="5dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_toEndOf="@id/tv_status"
        android:visibility="gone"/>
    <TextView
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:id="@+id/tv_created_at"
        android:text="0000-00-00 00:00:00"
        android:layout_marginStart="5dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_toStartOf="@id/bt_edit"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/rl_content_bt_edit"
        android:id="@+id/bt_edit"
        android:singleLine="true"
        android:layout_gravity="center"
        android:textSize="12sp"
        android:layout_alignParentEnd="true"
        android:background="#4ab6b6"
        android:textColor="#FFF"
        android:layout_margin="5dp"/>
</RelativeLayout>