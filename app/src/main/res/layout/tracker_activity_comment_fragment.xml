<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

    </data>
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@color/tracker_activity_comment_fragment_background"
        >
        <TextView
            android:id="@+id/comment_fragment_tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comment_fragment_tv_comment"
            android:textColor="@color/tracker_activity_comment_fragment_tv_comment"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:layout_marginTop="100dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>
        <EditText
            android:id="@+id/comment_fragment_et_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/comment_fragment_et_comment"
            android:inputType="textMultiLine"
            android:layout_below="@+id/comment_fragment_tv_comment"
            android:textColorHint="@color/tracker_activity_comment_fragment_et_comment"
            android:textColor="@color/tracker_activity_comment_fragment_et_comment"
            android:hint="@string/comment_fragment_et_hint"
            android:maxLines="7"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text=""/>
        <Button
            android:id="@+id/comment_fragment_bt_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/comment_fragment_bt_comment"
            android:textColor="@color/tracker_activity_comment_fragment_bt_submit_text"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:layout_below="@+id/comment_fragment_et_comment"
            android:text="@string/comment_fragment_bt_submit"
            android:layout_marginTop="30dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp" />
    </RelativeLayout>

</layout>